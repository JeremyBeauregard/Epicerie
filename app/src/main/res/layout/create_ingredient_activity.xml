<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/editTextNomIngredient"
        android:layout_gravity="center_horizontal"
        android:hint="Nom de l&apos;ingredient"
        android:layout_weight="0.2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/editTextPrixIngredient"
        android:layout_gravity="center_horizontal"
        android:hint="Prix en cents"
        android:layout_weight="0.2" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/spinnerUnites"
        android:layout_gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:layout_weight="0.2" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView9"
        android:layout_weight="0.4"
        android:src="@mipmap/food"
        android:padding="20dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/boutonAjouter"
        android:background="@color/bleuClair"
        android:layout_weight="0.12"
        android:clickable="true">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView8"
            android:src="@mipmap/save"
            android:scaleType="fitStart"
            android:layout_weight="0.2"
            android:padding="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ajouter l&apos;ingrÃ©dient"
            android:id="@+id/textView8"
            android:textColor="#FFF"
            android:layout_weight="0.8"
            android:textAlignment="center"
            android:gravity="center"/>
    </LinearLayout>

</LinearLayout>