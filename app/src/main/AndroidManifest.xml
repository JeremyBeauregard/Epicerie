<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uqac.informatiquemobile.epicerie">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activity.MainMenu"
            android:label="Menu"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            ></activity>

        <activity
            android:name=".activity.ListIngredientActivity"
            android:label="Mon frigo"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name=".activity.CreateIngredientActivity"
            android:label="Ajouter un ingredient"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        
        <activity android:name=".activity.ListeCourses"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.CreateRecetteActivity"></activity>
        <activity android:name=".activity.AddIngredientActivity"></activity>
        <activity android:name=".activity.ListRecettesActivity"></activity>
        <activity android:name=".activity.RechercheActivity"></activity>
        <activity android:name=".activity.AfficherRecetteRecherche"></activity>
        <activity android:name=".activity.DetailedRecetteActivity"></activity>
        <activity android:name=".activity.PlanifierRepasActivity"></activity>
        <activity android:name=".activity.SelectRecetteActivity"></activity>

        <service android:name=".service.DateRecetteService"></service>


    </application>

</manifest>
